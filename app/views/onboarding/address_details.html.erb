<div class="card">
  <h5 class="card-header">Address Details</h5>

  <%= simple_form_for @address, url: onboarding_path, method: :patch, wrapper: :horizontal_form  do |form| %>
    <div class="card-body d-grid gap-3">
      <%= form.input :address_line1 %>
      <%= form.input :address_line2 %>
      <%= form.input :zip %>
      <%= form.input :city %>
      <%= form.input :country_code, collection: ['India', 'US'] %>
    </div>

    <div class="card-footer bg-transparent">
      <%= form.button :submit , 'Submit', class: 'btn-primary' %>
      <%= link_to 'skip', next_wizard_path, class: 'btn btn-outline-secondary' %>
    </div>
  <% end %>
</div>
