<h1>Basic Details</h1>

<%= form_for @user, url: onboarding_path, method: :patch, html: { class: 'form row g-3' } do |form| %>
  <div class="col-6">
    <%= form.label :first_name, class: 'form-label' %>
    <%= form.text_field :first_name, class: 'form-control' %>
  </div>

  <div class="col-6">
    <%= form.label :last_name, class: 'form-label' %>
    <%= form.text_field :last_name, class: 'form-control' %>
  </div>

  <div class="col-12">
    <%= form.submit 'Submit', class: "btn btn-primary" %>
    <%= link_to 'skip', next_wizard_path, class: 'btn btn-secondary' %>
  </div>
<% end %>
